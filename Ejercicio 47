Algoritmo Ejercicio 47
    Definir arreglo como entero ;
    Definir num, i como Entero;
    Definir encontrado,  como Logico;

    encontrado <- Falso;

    Escribir "Ingresa 10 números para llenar el arreglo:";
    Para i <- 1 Hasta 10 Hacer;
        Escribir "Ingresa el número ", i;
        Leer arreglo ;
    FinPara

    Escribir "Ingresa el número que quieres buscar:";
    Leer num;

    Para i <- 1 Hasta 10 Hacer;
        Si arreglo = num Entonces;
            encontrado <- Verdadero;
        FinSi
    FinPara

    Si encontrado Entonces;
        Escribir "El número ", num , " está presente en el arreglo.";
    Sino
        Escribir "El número ", num, " no está presente en el arreglo.";
    FinSi
FinAlgoritmo