Algoritmo Ejercicio 50
    Definir arreglo, i como Entero;
    Definir valorBuscado como Entero;

    Escribir "Ingresa 10 números para llenar el arreglo:";
    Para i <- 1 Hasta 10 Hacer;
        Escribir "Ingresa el número ", i;
        Leer arreglo;
    FinPara

    Escribir "Ingresa el valor que deseas buscar:";
    Leer valorBuscado;

    Definir encontrado como Logico;
    encontrado <- Falso;

    Escribir "Los índices del valor ", valorBuscado, " en el arreglo son: [";
    Para i <- 1 Hasta 10 Hacer;
        Si arreglo = valorBuscado Entonces;
            Escribir i;
            encontrado <- Verdadero;
        FinSi
    FinPara
    Escribir "]";

    Si No encontrado Entonces;
        Escribir "El valor ", valorBuscado, " no se encuentra en el arreglo.";
    FinSi
FinAlgoritmo 