algoritmo Ejercicio43
      definir num, suma Como Entero ;
  suma <- 0;
  num <-0;
  
  Mientras num>= 0 hacer;
    Escribir "Ingrese un número entero positivo:";
    Leer num;
    
    Si num >= 0 entonces;
      suma <- suma + num;
    FinSi
  FinMientras
  
  Escribir "La suma de los números ingresados es:", suma;
FinAlgoritmo 